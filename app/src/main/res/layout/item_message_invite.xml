    <LinearLayout
        android:layout_toEndOf="@id/iv_headview"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:text="storm"
            android:textColor="@color/color333"
            android:textSize="14sp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_content"
            android:textColor="@color/color333"
            android:textSize="11sp"
            android:text="请求添加您为好友"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <Button
        android:id="@+id/btn_refuse"
        android:text="@string/msg_button_refuse"
        android:textColor="@color/white"
        android:background="@drawable/bg_msg_refuse"
        android:textSize="12sp"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="60dp"
        android:layout_height="29dp"/>


    <Button
        android:id="@+id/btn_agree"
        android:layout_toLeftOf="@id/btn_refuse"
        android:text="@string/msg_button_agree"
        android:textColor="@color/white"
        android:background="@drawable/bg_msg_agree"
        android:textSize="12sp"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="29dp"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_line_ffcccccc"
        />
