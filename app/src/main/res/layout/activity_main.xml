<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/fl_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorf4f"/>
        <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/ll_main_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/iv_main_home"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/tab_home_select"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_main_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/iv_main_order"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/tab_city_unselect"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_main_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView android:layout_width="22dp"
                               android:layout_height="22dp"
                               android:id="@+id/iv_main_message"
                               android:layout_gravity="center"
                               android:src="@mipmap/tab_message_unselect"
                    />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_main_my"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/iv_main_my"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/tab_my_unselect"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>