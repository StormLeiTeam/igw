<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
>

    <ImageView android:layout_width="match_parent"
               android:layout_height="50dp"
               android:scaleType="fitXY"
               android:id="@+id/iv_base_background"
               android:background="@color/white"
    />

    <com.igw.igw.utils.statusbarutils.StatusBarHeightView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_type="use_padding_top"
            android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/icon_homemessage"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="@dimen/dp_14"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_centerInParent="true"
                      android:textSize="@dimen/dp_24"
                      android:textColor="@color/colorF33"
                      android:text="I-GW"
                      android:textStyle="bold"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/dp_12"
                      android:textSize="@dimen/dp_15"
                      android:textColor="@color/color333"
                      android:text="中/en"
                      android:textStyle="bold"
            />


        </RelativeLayout>

        <ScrollView android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">



                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginRight="@dimen/dp_10"
                              android:layout_marginLeft="@dimen/dp_10"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp_10"
                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:background="@drawable/bg_shape_dfe_4"
                                  android:layout_height="172dp">


                        <ImageView android:layout_width="77dp"
                                   android:src="@mipmap/icon_home_bilingual"
                                   android:layout_height="77dp"/>

                        <TextView android:layout_width="wrap_content"
                                  android:textStyle="bold"
                                  android:text="双语聊天城"
                                  android:textSize="@dimen/dp_15"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_12"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="Bilingual chat city"
                                  android:textSize="@dimen/dp_11"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_11"
                                  android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                                  android:layout_marginLeft="@dimen/dp_11"
                                  android:background="@drawable/bg_shape_dfe_4"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="172dp">


                        <ImageView android:layout_width="77dp"
                                   android:src="@mipmap/icon_home_spellword"
                                   android:layout_height="77dp"/>

                        <TextView android:layout_width="wrap_content"
                                  android:textStyle="bold"
                                  android:text="拼词游戏"
                                  android:textSize="@dimen/dp_15"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_12"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="Clay game"
                                  android:textSize="@dimen/dp_11"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_11"
                                  android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="172dp"
                              android:layout_margin="@dimen/dp_10"
                              android:orientation="vertical"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:id="@+id/ll_home_citystation"
                              android:background="@mipmap/icon_home_city">


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="城市驿站"
                              android:textColor="@color/black"
                              android:textSize="@dimen/dp_26"
                              android:textStyle="bold"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="City of the city"
                              android:textColor="@color/black"
                              android:layout_marginTop="@dimen/dp_13"
                              android:textSize="@dimen/dp_17"

                    />


                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginRight="@dimen/dp_10"
                              android:layout_marginLeft="@dimen/dp_10"
                              android:layout_marginBottom="@dimen/dp_10"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:background="@drawable/bg_shape_dfe_4"
                                  android:layout_height="172dp">


                        <ImageView android:layout_width="77dp"
                                   android:src="@mipmap/icon_home_castle"
                                   android:layout_height="77dp"/>

                        <TextView android:layout_width="wrap_content"
                                  android:textStyle="bold"
                                  android:text="秘籍城堡"
                                  android:textSize="@dimen/dp_15"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_12"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="Cheats castle"
                                  android:textSize="@dimen/dp_11"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_11"
                                  android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                                  android:layout_marginLeft="@dimen/dp_11"
                                  android:background="@drawable/bg_shape_dfe_4"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="172dp">


                        <ImageView android:layout_width="77dp"
                                   android:src="@mipmap/icon_home_studytour"
                                   android:layout_height="77dp"/>

                        <TextView android:layout_width="wrap_content"
                                  android:textStyle="bold"
                                  android:text="游学研学城"
                                  android:textSize="@dimen/dp_15"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_12"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="School of School"
                                  android:textSize="@dimen/dp_11"
                                  android:textColor="@color/black"
                                  android:layout_marginTop="@dimen/dp_11"
                                  android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.igw.igw.utils.statusbarutils.StatusBarHeightView>
</RelativeLayout>