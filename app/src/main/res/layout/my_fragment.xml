<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_base_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY" />

            <com.igw.igw.utils.statusbarutils.StatusBarHeightView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:use_type="use_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="216dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="174dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_my_bacgground" />

                        <ImageView
                            android:id="@+id/iv_my_headpic"
                            android:layout_width="74dp"
                            android:layout_height="74dp"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:layout_marginTop="@dimen/dp_24" />

                        <TextView
                            android:id="@+id/tv_my_nickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="35dp"
                            android:layout_toRightOf="@+id/iv_my_headpic"
                            android:text="Admin"
                            android:textColor="@color/color333"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_my_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_my_nickName"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/iv_my_headpic"
                            android:text="喜欢交友的朋友"
                            android:textColor="@color/color333"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_toRightOf="@+id/iv_my_headpic"
                            android:gravity="right"
                            android:text="中/en"
                            android:textColor="@color/color333"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@mipmap/icon_my_price_background"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="人民币"
                                    android:textColor="@color/color333"
                                    android:textSize="@dimen/dp_13" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:gravity="center"
                                    android:text="¥99.99"
                                    android:textColor="@color/color333"
                                    android:textSize="@dimen/dp_24"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_0.5"
                                android:layout_height="47dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colorCBC"

                                />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="美元"
                                    android:textColor="@color/color333"
                                    android:textSize="@dimen/dp_13" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:gravity="center"
                                    android:text="$99.99"
                                    android:textColor="@color/color333"
                                    android:textSize="@dimen/dp_24"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
