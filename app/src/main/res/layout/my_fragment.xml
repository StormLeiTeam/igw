                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:src="@mipmap/icon_my_about" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="关于"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/dp_12" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_14"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@color/colorCBC"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:src="@mipmap/icon_my_feedback" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="帮助与反馈"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/dp_12" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_14"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@color/colorCBC"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:src="@mipmap/icon_my_secede" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="退出登录"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/dp_12" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_14"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0.5"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@color/colorCBC"

                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>
            </com.igw.igw.utils.statusbarutils.StatusBarHeightView>
        </RelativeLayout>


    </ScrollView>
