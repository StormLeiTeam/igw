<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <com.igw.igw.widget.storm.StormCircleImageView
            android:id="@+id/iv_head_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10.5dp" />



        <TextView
            android:id="@+id/tv_administrator"
            android:text="管理员"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="11.5dp"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_chat_room_administrator"
            />


        <TextView
            android:id="@+id/tv_name"
            android:layout_marginStart="6dp"
            android:textSize="14sp"
            android:text="AAAAAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>




    <Button
        android:id="@+id/btn_add_friend"
        android:textSize="12sp"
        android:text="加好友"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_add_friend"
        android:layout_marginEnd="11dp"
        android:layout_alignParentEnd="true"
        android:layout_width="64dp"
        android:layout_height="26dp"/>



</RelativeLayout>