<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:textColor="@color/color666"
        android:textSize="10sp"
        android:paddingStart="10.5dp"
        android:id="@+id/tv_first_letter"
        android:layout_width="match_parent"
        android:text="A"
        android:gravity="center_vertical"
        android:background="@color/grey_eeeeee"
        android:layout_height="20dp"/>



    <LinearLayout
        android:gravity="center_vertical"
        android:paddingStart="10.5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        
        <com.igw.igw.widget.storm.StormCircleImageView
            android:id="@+id/iv_friend_head_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />

        <LinearLayout
            android:layout_marginStart="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_friend_nick_name"
                android:textColor="@color/color333"
                android:text="AAAAAA"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_address"
                android:textSize="10sp"
                android:layout_marginTop="7.5dp"
                android:textColor="@color/color999"
                android:text="美国纽约"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        
    </LinearLayout>



</LinearLayout>