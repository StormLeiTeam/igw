<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.igw.igw.widget.storm.StormCircleImageView
            android:id="@+id/iv_head_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10.5dp" />



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="AAAAAA"
            android:textSize="14sp" />


    </LinearLayout>



    <LinearLayout
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:visibility="gone"
                android:id="@+id/btn_banned"
                android:text="禁言"
                android:textSize="12sp"
                android:textColor="#F33A39"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:background="@drawable/bg_banned"
                android:layout_height="26dp"/>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_unbanned"
                android:text="解除禁言"
                android:textSize="12sp"
                android:textColor="#5DCEF4"
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:background="@drawable/bg_unbanned"
                android:layout_height="26dp"/>

        </RelativeLayout>



        <Button
            android:id="@+id/btn_add_friend"
            android:layout_marginStart="13dp"
            android:textSize="12sp"
            android:text="加好友"
            android:background="@drawable/bg_btn_add_friend"
            android:layout_marginEnd="11dp"
            android:layout_width="64dp"
            android:layout_height="26dp"/>



    </LinearLayout>

</RelativeLayout>