<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_loadding_error"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f4f4f4"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/img_layout_loadding_error"
            android:layout_width="185dp"
            android:layout_height="153dp"/>

    <TextView
            android:id="@+id/tv_loadding_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#999"
            android:textSize="16dp"/>
    <TextView
            android:id="@+id/tv_loadding_error"
            android:layout_width="wrap_content"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:background="@drawable/bg_gradient_008_corners_22"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_gravity="center_horizontal"
            android:text="重新加载"
            android:visibility="gone"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:layout_marginTop="23dp"
            android:textColor="#fff"
            android:textSize="13dp"/>
    <View android:layout_width="wrap_content" android:layout_height="1dp"
          android:layout_marginBottom="50dp"
          android:visibility="gone"
          android:id="@+id/view"
          android:layout_marginTop="33dp"

    />
</LinearLayout>
